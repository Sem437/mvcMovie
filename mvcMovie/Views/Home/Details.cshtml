@model mvcMovie.Models.Movie.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<div class="details-container">
    <div>
        <img src="@Model.ImgLink" alt="@Model.Title" />
    </div>
    <h1 class="movie-title">@Model.Title</h1>
    <div class="movie-info">
        <p><strong>Movie Time:</strong> @Model.MovieTime minutes</p>
        <p><strong>Release Date:</strong> @Model.ReleaseData</p>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Price:</strong> @Model.price</p>
    </div>
    <div class="movie-description">
        <p><h5>Beschrijving</h5></p>
        <p>@Model.Description</p>
    </div>
</div>
