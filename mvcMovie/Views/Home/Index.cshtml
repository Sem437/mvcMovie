@model IEnumerable<mvcMovie.Models.Movie.Movie>

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="~/css/index.css" rel="stylesheet" />
</head>

<form asp-controller="Home" asp-action="Index">
    <div class="searchBar-div">
        <div class="searchBar-Container">
            <input class="searchBar-contents" type="text" id="searchBar" value="@ViewData["titleMovie"]" name="MovieTitle" />
            <button class="searchBar-contents" type="submit" id="searchButton">
                <ion-icon name="search-outline"></ion-icon>
            </button>
        </div>

        <div class="filter-Div">
            <div class="filter-Container">
                <div class="filter-Prijs""0">
                    <input type="number" class="input-Price" class="input-Filter-Contents" value="@ViewData["minMovieTime"]" min="1" name="minMovieTime" placeholder="60"/>
                    <input type="number" class="input-Price" class="input-Filter-Contents" value="@ViewData["maxMovieTime"]" min="2" name="maxMovieTime" placeholder="120"/>
                    <select name="priceOrder">
                        <option value="Low2High">Low to high</option>
                        <option value="High2Low">High to low</option>
                    </select>                   
                </div>
            </div>
        </div>
    </div>
</form>


<div class="movie-list">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", "Home", new{Id = item.Id})" class="movie-card-body">
            <img class="movie-card-img" src="@item.ImgLink" alt="@item.Title" />
            <div class="movie-card-details">
                <div class="movie-card-title">
                    @Html.DisplayFor(modelItem => item.Title)
                </div>
            </div>
        </a>
    }

</div>
