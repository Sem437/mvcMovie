@model IEnumerable<mvcMovie.Models.Movie.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-controller="Movies" asp-action="Index">
    <div class="searchBar-div">
        <div class="searchBar-Container">
            <input class="searchBar-contents" type="text" id="searchBar" name="MovieTitle" />
            <button class="searchBar-contents" type="submit" id="searchButton">
                <ion-icon name="search-outline"></ion-icon>
            </button>
        </div>

        <div class="filter-Div">
            <div class="filter-Container">
                <div class="filter-Prijs">
                    <input type="number" class="input-Price" class="input-Filter-Contents" placeholder="0" min="1" />
                    <input type="number" class="input-Price" class="input-Filter-Contents" placeholder="100" min="2" />
                </div>
            </div>
        </div>
    </div>
</form>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="data-row">
            <td class="movie-title-td">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td class="movie-imglink-td">
                <a href="@Html.DisplayFor(modelItem => item.ImgLink)"> Image </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
